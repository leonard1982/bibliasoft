<?php

class MySQL {

    private $conexion;

    public function MySQL() {
        if (!isset($this->conexion)) {
            $this->conexion = (mysql_connect("localhost", "root", "joseangel.gomez")) or die(mysql_error());
            mysql_select_db("bdferro", $this->conexion) or die(mysql_error());
        }
    }

}

?>
